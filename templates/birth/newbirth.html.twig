{% extends 'base.html.twig' %}

{% block title %}New Birth
{% endblock %}

{% block body %}
	<div class="container" style="margin-top:150px">
		<h1>Request a Birth certificate</h1>
		{{ form_start(form) }}
		<p>I hereby declare that the information provided is true and correct </p>

		<div class="form-group d-none">
			<label for="exampleInputEmail1 ">Officier</label>
			{{ form_widget(form.officier,{'attr':{'class':'form-control'}}) }}

		</div>
		<div class="form-group d-none">
			<label for="exampleInputEmail1 ">Office Location</label>
			{{ form_widget(form.officeLocation,{'attr':{'class':'form-control'}}) }}

		</div>

		<div class="form-group ">
			<label for="exampleInputEmail1">Date</label>
			{{ form_widget(form.declarationDate,{'attr':{'class':'form-control'}}) }}

		</div>
		<div class="form-group  ">
			<label for="exampleInputEmail1">Payment</label>
			{{ form_widget(form.payment,{'attr':{'class':'form-control'}}) }}

		</div>
		<div class="form-group d-none ">
			<label for="exampleInputEmail1">Status</label>
			{{ form_widget(form.status,{'attr':{'class':'form-control'}}) }}

		</div>
		<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
		{{ form_end(form) }}
	</div>


{% endblock %}

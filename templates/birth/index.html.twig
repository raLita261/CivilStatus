{% extends 'base.html.twig' %}

{% block title %}Birth index{% endblock %}

{% block body %}
    <h1>Birth index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DeclarationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for birth in births %}
            <tr>
                <td>{{ birth.id }}</td>
                <td>{{ birth.declarationDate ? birth.declarationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('birth_show', {'id': birth.id}) }}">show</a>
                    <a href="{{ path('birth_edit', {'id': birth.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('birth_new') }}">Create new</a>
{% endblock %}
